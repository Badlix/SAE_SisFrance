<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<BorderPane minHeight="740.0" minWidth="1200.0" prefHeight="740.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.groupeF.sae_sisfrance.DataPageController">
    <top>
        <MenuBar fx:id="menuBar" prefHeight="50.0" BorderPane.alignment="CENTER_LEFT">
            <menus>
                <Menu mnemonicParsing="false" text="Localisation">
                    <items>
                        <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                            <content>
                                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="175.0">
                                    <children>
                                        <Label alignment="CENTER" prefHeight="25.0" text="Région : ">
                                            <font>
                                                <Font size="15.0" />
                                            </font>
                                        </Label>
                                        <ChoiceBox fx:id="regionFilter" prefHeight="10.0" prefWidth="100.0" />
                                    </children>
                                </HBox>
                            </content>
                        </CustomMenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Date">
                    <items>
                        <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                            <content>
                                <GridPane prefWidth="160.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="40.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <DatePicker fx:id="startDateFilter" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <DatePicker fx:id="endDateFilter" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="DE : " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <Label text="A : " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>
                            </content>
                        </CustomMenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Coordonnées">
                    <items>
                        <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                            <content>
                                <GridPane prefWidth="160.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="90.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="70.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Longitude : " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <Label text="Latitude : " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <Label text="Rayon (km) : " GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <TextField fx:id="longFilter" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <TextField fx:id="latFilter" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <TextField fx:id="rayonFilter" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    </children>
                                </GridPane>
                            </content>
                        </CustomMenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Intensité">
                    <items>
                        <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
                            <content>
                                <HBox>
                                    <children>
                                        <RangeSlider fx:id="intensityFilter" blockIncrement="0.5" highValue="12.0" lowValue="2.0" majorTickUnit="2" max="12.0" min="2.0" minorTickCount="1" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                                        <Label fx:id="rangeLabel" />
                                    </children>
                                </HBox>
                            </content>
                        </CustomMenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false">
                    <graphic>
                        <TextField fx:id="rechercherTextField" promptText="Rechercher" />
                    </graphic>
                </Menu>
            <Menu mnemonicParsing="false">
               <graphic>
                  <Button mnemonicParsing="false" onAction="#applyFilter" text="Filtrer" />
               </graphic>
            </Menu>
            <Menu mnemonicParsing="false" text="Unspecified Menu">
              <items>
                  <CustomMenuItem mnemonicParsing="false" text="Qualité">
                     <content>
                         <VBox fx:id="qualityFilter"></VBox>
                     </content>
                  </CustomMenuItem>
              </items>
            </Menu>
            </menus>
        </MenuBar>
    </top>
   <center>
      <TableView fx:id="table" maxWidth="520.0" minWidth="520.0" prefWidth="520.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="idColumn" minWidth="80.0" text="Id" />
            <TableColumn fx:id="dateColumn" minWidth="110.0" prefWidth="110.0" text="Date" />
            <TableColumn fx:id="regionColumn" minWidth="250.0" prefWidth="250.0" text="Région" />
            <TableColumn fx:id="intensityColumn" minWidth="80.0" text="Intensité" />
        </columns>
      </TableView>
   </center>
    <bottom>
        <HBox fx:id="footer" styleClass="bottom">
            <Button onAction="#newFile" text="Nouveau fichier" />
            <Button fx:id="graphicsButton" onAction="#changingToGraphicsPage" styleClass="newFile" text="Graphiques" />
        </HBox>
    </bottom>
   <right>
      <StackPane alignment="BOTTOM_RIGHT" maxWidth="-Infinity" minWidth="680.0" prefWidth="680.0">
         <children>
             <MapView fx:id="mapView" minWidth="680.0" />
            <Button maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#zoomIn" prefHeight="30.0" prefWidth="30.0" text="+">
               <StackPane.margin>
                  <Insets bottom="50.0" right="10.0" />
               </StackPane.margin>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#zoomOut" prefHeight="30.0" prefWidth="30.0" text="-">
               <StackPane.margin>
                  <Insets bottom="15.0" right="10.0" />
               </StackPane.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </StackPane>
   </right>
</BorderPane>
